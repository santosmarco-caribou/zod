{
  "name": "zod",
  "version": "1.0.0",
  "description": "Schema validation",
  "keywords": [],
  "repository": "https://github.com/santosmarco/zod",
  "license": "MIT",
  "main": "build/main/index.js",
  "module": "build/module/index.js",
  "typings": "build/main/index.d.ts",
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "prebuild": "rimraf build && pnpm run format:write && pnpm run lint:fix",
    "build": "pnpm run prebuild && pnpm run build:main && pnpm run build:module",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "dev": "ts-node-dev --transpile-only --respawn playground.ts",
    "docs": "typedoc src --out ./docs",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:watch:verbose": "jest --watchAll --verbose"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "lodash-decorators": "^6.0.1",
    "nanoid": "3.3.4",
    "safe-json-stringify": "^1.2.0",
    "tiny-case": "^1.0.3"
  },
  "devDependencies": {
    "@types/jest": "^29.2.4",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.12",
    "@types/safe-json-stringify": "^1.1.2",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^4.4.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-jsdoc": "^39.6.4",
    "eslint-plugin-tsdoc": "^0.2.17",
    "eslint-plugin-unicorn": "^45.0.1",
    "expect-type": "^0.15.0",
    "fp-ts": "^2.13.1",
    "io-ts": "^2.2.20",
    "jest": "^29.3.1",
    "pnpm": "^7.18.1",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "ts-toolbelt": "^9.6.0",
    "type-fest": "^3.3.0",
    "typedoc": "^0.23.21",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=10"
  }
}
